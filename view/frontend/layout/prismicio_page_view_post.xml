<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>

        <referenceBlock name="page.main.title" remove="true" />

        <referenceContainer name="prismicio_content">

            <block name="prismicio_page_title" class="Elgentos\PrismicIO\Block\PageTitle">
                <arguments>
                    <argument name="document_reference" xsi:type="string">data.title</argument>
                </arguments>
            </block>

            <block name="prismicio_post" class="Elgentos\PrismicIO\Block\Template" template="Elgentos_PrismicIO::post.phtml">

                <block name="prismicio_post_title" as="prismicio_post.title" class="Elgentos\PrismicIO\Block\Dom\Text" template="data.title" />
                <block name="prismicio_post_category" as="prismicio_post.category" class="Elgentos\PrismicIO\Block\Dom\Plain" template="data.post_category" />

                <block name="prismicio_post_poster_image" as="prismicio_post.poster_image" class="Elgentos\PrismicIO\Block\Template" template="Elgentos_PrismicIO::element/image.phtml">
                    <arguments>
                        <argument name="document_reference" xsi:type="string">data.poster_image</argument>
                    </arguments>
                </block>

                <block name="prismicio_post_date_posted" as="prismicio_post.date.posted" class="Elgentos\PrismicIO\Block\Dom\Date" template="data.date-posted" />
                <block name="prismicio_post_date_updated" as="prismicio_post.date.updated" class="Elgentos\PrismicIO\Block\Dom\Date" template="data.date_last_updated" />

                <block name="prismicio_post_body" as="prismicio_post.body" class="Elgentos\PrismicIO\Block\Dom\Slices" template="data.body">
                    <block name="prismicio_post_body_text" class="Elgentos\PrismicIO\Block\Dom\Debug" />
                    <block name="prismicio_post_body_quote" class="Elgentos\PrismicIO\Block\Dom\Debug" />
                    <block name="prismicio_post_body_image_with_caption" class="Elgentos\PrismicIO\Block\Dom\Debug" />
                    <block name="prismicio_post_body_section_header" class="Elgentos\PrismicIO\Block\Dom\Debug" />
                    <block name="prismicio_post_body_sub-section_header_-_h3" class="Elgentos\PrismicIO\Block\Dom\Debug" />
                </block>

            </block>

            <block name="prismicio_debug" class="Elgentos\PrismicIO\Block\Dom\Debug" template="data.body" />

        </referenceContainer>

    </body>
    
</page>